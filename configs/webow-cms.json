{
    "name": "Webow CMS",
    "description": "Your Webow CMS website configuration",
    "baseUrl": "https://dev-saas-cms2.webow.jp",
    "authentication": {
        "type": "basic",
        "credentials": {
            "usernameEnv": "WEBOW_USERNAME",
            "passwordEnv": "WEBOW_PASSWORD"
        }
    },
    "navigation": {
        "newArticleUrl": "https://dev-saas-cms2.webow.jp/admin/?controller=article&action=add",
        "fallbackSelectors": [
            {
                "type": "xpath",
                "selector": "//a[contains(text(), '新規作成')]",
                "description": "New article creation link"
            },
            {
                "type": "xpath",
                "selector": "//a[contains(@href, '/articles/new')]",
                "description": "Direct new article link"
            }
        ],
        "waitForElement": "input[name='title'], #title"
    },
    "formFields": {
        "title": {
            "selector": "input[name='title']",
            "selectorType": "css",
            "fieldType": "text",
            "required": true,
            "fallbackSelectors": [
                "#title",
                "input[id='title']"
            ],
            "clearBefore": true
        },
        "content": {
            "selector": "textarea[name='body']",
            "selectorType": "css",
            "fieldType": "textarea",
            "required": true,
            "fallbackSelectors": [
                "#body",
                "textarea[id='body']",
                ".editor textarea"
            ],
            "clearBefore": true
        }
    },
    "actions": {
        "save": {
            "selector": "button[type='submit']",
            "selectorType": "css",
            "waitAfter": 3000,
            "fallbackSelectors": [
                "input[type='submit']",
                "button[name='save']",
                ".btn-save"
            ],
            "successIndicator": ".alert-success, .success-message"
        }
    },
    "settings": {
        "waitTimeout": 15000,
        "retryAttempts": 3,
        "delayBetweenActions": 1500,
        "headless": false,
        "screenshotOnError": true
    }
}