{
    "name": "Webow CMS",
    "description": "Your Webow CMS website configuration",
    "baseUrl": "#testURL",
    "authentication": {
        "type": "basic",
        "credentials": {
            "usernameEnv": "WEBOW_USERNAME",
            "passwordEnv": "BASIC_AUTH_PASSWORD"
        }
    },
    "navigation": {
        "newArticleUrl": "#testURL",
        "waitForElement": "form, input[name='title'], #title"
    },
    "formFields": {
        "title": {
            "selector": "input[name='title']",
            "selectorType": "css",
            "fieldType": "text",
            "required": true,
            "clearBefore": true,
            "fallbackSelectors": [
                "#title",
                "input[id='title']",
                "textarea[name='title']"
            ]
        },
        "text": {
            "selector": "textarea[name='body']",
            "selectorType": "css",
            "fieldType": "textarea",
            "required": true,
            "clearBefore": true,
            "fallbackSelectors": [
                "#body",
                "textarea[id='body']",
                ".editor textarea"
            ]
        }
    },
    "actions": {
        "save": {
            "selector": "button[type='submit']",
            "selectorType": "css",
            "waitAfter": 3000,
            "fallbackSelectors": [
                "input[type='submit']",
                "button[name='save']",
                ".btn-save"
            ],
            "successIndicator": ".alert-success, .success-message"
        }
    },
    "settings": {
        "waitTimeout": 15000,
        "retryAttempts": 3,
        "delayBetweenActions": 1500,
        "headless": false,
        "screenshotOnError": true
    }
}